<p id="notice"><%= notice %></p>

<h1>Todos Los Conciertos</h1>

<table>
  <thead>
    <tr>
      <th>Evento</th>
      <th>Asistencia</th>
      <th>Duración</th>
      <th>Grupo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concerts.each do |concert| %>
      <tr>
        <td><%= concert.event %></td>
        <td><%= concert.tickets %> personas</td>
        <td><%= concert.duration %> minutos</td>
        <td><%= concert.group.name %></td>
        <td><%= link_to 'Más Info', concert %></td>
        <td><%= link_to 'Editar', edit_concert_path(concert) %></td>
        <td><%= link_to 'Borrar', concert, method: :delete, data: { confirm: 'Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Volver a Grupos', root_path %><br>
<%= link_to 'Nuevo Concierto', new_concert_path %>
